{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "www.github.com/diefesson/incontrol-schema/spawn-schema.json",
  "title": "Spawn",
  "description": "Array of spawn rules",
  "type": "array",
  "items": {
    "title": "Spawn rule",
    "description": "Define a spawn rule",
    "type": "object",
    "properties": {
      "helditem": {
        "type": "string"
      },
      "mob": {
        "type": "string"
      },
      "random": {
        "allOf": [
          {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          }
        ]
      },
      "result": {
        "enum": [
          "allow",
          "default",
          "deny_with_actions",
          "deny"
        ]
      },
      "when": {
        "enum": [
          "despawn",
          "finalize",
          "onjoin",
          "position"
        ]
      }
    }
  }
}